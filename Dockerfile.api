# Dockerfile.api (Go multi-stage)
FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/api ./apps/api-gateway

FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=build /out/api /app/api
ENV PORT=8080
USER 65532:65532
EXPOSE 8080
ENTRYPOINT ["/app/api"]
